<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="insured_form" model="ir.ui.view">
        <field name="name">hirms.insured.form</field>
        <field name="model">hirms.insured</field>  
        <field name="arch" type="xml">
            <form string="Insured form">
                    <group>
                        <group name="name" string="string">
                            <field name="insured_seq"/>
                            <field name="firstName"/>
                            <field name="lastName"/>
                            <field name="gender"/>
                        </group>
                        <group name="name" string="string">
                            <field name="dob"/>
                            <field name="bloodGroup"/>
                            <field name="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="name" string="string">
                            <field name="child_ids"/>
                        </page>
                    </notebook>
            </form>
        </field>
    </record>
    <!-- Insured tree view-->
    <record id="insured_tree" model="ir.ui.view">
        <field name="name">hirms.insured.tree</field>
        <field name="model">hirms.insured</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="insured_seq"/>
                <field name="firstName"/>
                <field name="lastName"/>
                <field name="gender"/>
                <field name="dob"/>
                <field name="dor"/>
            </tree>
        </field>
    </record>
    <!--    Action of inpatient menu-->
    <record model="ir.actions.act_window" id="insured_action">
        <field name="name">Insured</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hirms.insured</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create insured
            </p>
            <p>
                You can create insured here.
            </p>
        </field>
    </record>

    <menuitem name="HIRMS"
              id="hirms_root_menu"
              sequence="9"/>
    <menuitem name="membership"
              id="membership_base_menu"
              parent="hirms_root_menu"
              sequence="7"/>
    <menuitem name="Insured"
              id="insured_menu"
              parent="membership_base_menu"
              action="insured_action"
              sequence="8"/>
</odoo>